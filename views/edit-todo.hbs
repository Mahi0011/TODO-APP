<body style="background-color: #B1A6A4;" >
    

<section class="vh-100" style="background-color: #B1A6A4;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="mb-5 font-weight-bold text-success "><u>EDIT TODO</u></h3>
            <form action="/edit-todo"method="post">
            <input type="text" name="id" id="hide"value={{id}}>
            <div class="form-outline mb-4">
              <input type="date" id="date" class="form-control form-control-lg "name="date" value={{this.date}} />
              {{!-- <label class="form-label" for="typeEmailX-2">Email</label> --}}
            </div>
            
<div class="btn-group btn-group-toggle" data-toggle="buttons">
  <label class="btn btn-primary active">
    <input type="radio" name="status" id="option1" value='' autocomplete="off" checked> PENDING
  </label>
  <label class="btn btn-success">
    <input type="radio" name="status" id="option2"value='true' autocomplete="off"> COMLETED
  </label>
</div>


            
            <div class="form-outline mb-4 "id="itemdiv">
            <input type="text" placeholder="add new" id="typePasswordX-2" class="mt-5 form-control form-control-lg text-primary bg-light" name="todos"value={{this.todo}}>

            </div>
            <button class="btn btn-danger btn-lg btn-block "id="entry" type="submit">UPDATE TODO</button>
            <hr class="my-4">
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>




