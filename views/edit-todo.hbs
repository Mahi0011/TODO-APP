<style>
    #itemdiv{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        width: 100%;
        height: fit-content;
    }
    .itemhalf{
        width: 75% !important;
    }
    #entry{
      width: 100%;
    }
    .a{
        background: #e9ecef;
        border: 1px solid rgb(178, 178, 178);
        width: 35px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
